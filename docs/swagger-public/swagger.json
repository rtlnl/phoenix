{
  "openapi": "3.0.0",
  "info": {
    "title": "RTL-DI Personalization APIs",
    "description": "This is the RESTful APIs of RTL Personalization models",
    "version": "1.0.0"
  },
  "paths": {
    "/recommend": {
      "get": {
        "summary": "Fetch the recommended items",
        "description": "This request will allow the client to read the recommended items given the parameters in the body",
        "parameters": [
          {
            "in": "query",
            "name": "publicationPoint",
            "schema": {
              "type": "string"
            },
            "description": "The publication point name of the model"
          },
          {
            "in": "query",
            "name": "campaign",
            "schema": {
              "type": "string"
            },
            "description": "The campaign name of the model"
          },
          {
            "in": "query",
            "name": "signalId",
            "schema": {
              "type": "string"
            },
            "description": "The signalId used to fetch the recommended items"
          }
        ],
        "responses": {
          "200": {
            "description": "Items retrieved correctly",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RecommendResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseError"
                }
              }
            }
          },
          "404": {
            "description": "Model not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseError"
                }
              }
            }
          },
          "500": {
            "description": "Could not upload data to the model",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseError"
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://personalization-dev.rtl-di.nl/public/"
    },
    {
      "url": "https://personalization-prod.rtl-di.nl/public/"
    },
    {
      "url": "http://localhost:8082/"
    }
  ],
  "components": {
    "schemas": {
      "RecommendResponse": {
        "type": "object",
        "properties": {
          "recommendations": {
            "description": "Recommended items for a particular signal",
            "example": [
              {
                "item": "item_1",
                "score": "0.876",
                "type": "movie"
              },
              {
                "item": "item_2",
                "score": "0.345",
                "type": "series"
              }
            ],
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "ResponseError": {
        "type": "object",
        "properties": {
          "message": {
            "description": "Error message of the failed operation",
            "example": "Key pizza doesn't exist",
            "type": "string"
          }
        }
      }
    }
  }
}